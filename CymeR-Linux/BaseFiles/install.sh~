#!/bin/bash
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
parentDIR="$(dirname "$DIR")"
##xterm -e docker build -t CymeR/brian $DIR/CymeR && \
echo '[Desktop Entry]' > $DIR/CymeR/CymeR.desktop && \
echo 'Type=Application' >> $DIR/CymeR/CymeR.desktop && \
echo 'Name=CymeR' >> $DIR/CymeR/CymeR.desktop && \
echo 'Exec='$DIR'/BaseFiles/Run.CymeR.sh' >> $DIR/CymeR/CymeR.desktop && \
echo 'Icon='$DIR'/BaseFiles/knime.png' >> $DIR/CymeR/CymeR.desktop && \
echo '[Desktop Entry]' > $DIR/CymeR/commit.desktop && \
echo 'Type=Application' >> $DIR/CymeR/commit.desktop && \e
echo 'Name=commit' >> $DIR/CymeR/commit.desktop && \
echo 'Exec='$DIR'/BaseFiles/commit.sh' >> $DIR/CymeR/commit.desktop && \
echo 'Icon='$DIR'/BaseFiles/commit.png' >> $DIR/CymeR/commit.desktop && \
mv $DIR/install.sh $DIR/BaseFiles/install.sh && \
chown 777 -R $DIR && \
chmod 777 -R $DIR



